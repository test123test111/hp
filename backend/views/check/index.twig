{% set menu_name = "check" %}
{% set sidebar_name = "验货" %}
{% extends "@app/views/layouts/header.twig" %}
{% block content %}

	<!-- Page heading -->
	<div id="pageHead" class="page-head">
		<form id="checkForm" class="head-input" action="">
			<input id="number" type="text" placeholder="请扫描或输入物流单号/包裹号">
			<button id="checkBtn" type="submit" class="btn btn-primary" >确定</button>
		</form>
	</div>
	<!-- Page heading ends -->
	<!-- Matter -->
	<div class="matter check" id="matter">

  </div>

	<!-- Matter End -->
	
{% endblock %}
{% block modal %}
  <!-- Modal -->
    <!-- 确定打印单个条码 modal -->
<div class="modal fade" id="singlePrintCodeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="batchPrintCodeModalLabel">确认打印条码</h4>
      </div>
      <div class="modal-body">
        <p class="output">确认打印该条码吗？</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <button id="confirmSinglePrint" type="button" class="btn btn-primary" data-dismiss="modal">确定</button>
      </div>
    </div>
  </div>
</div>
  <!-- 确定批量打印条码 modal -->
<div class="modal fade" id="batchPrintCodeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="batchPrintCodeModalLabel">确认打印条码</h4>
      </div>
      <div class="modal-body">
        <p class="output">确认批量打印条码吗？</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        
        <button id="confirmBatchPrint" type="button" class="btn btn-primary" data-dismiss="modal">确定</button>
      </div>
    </div>
  </div>
</div>
<!-- 批量入箱 -->
<div class="modal fade" id="batchInBoxModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="batchPrintCodeModalLabel">请选择物流箱</h4>
      </div>
      <div class="modal-body">
        <ul class="box-list" id="boxList">
          {% for box in boxes %}
            <li class="box"><a href="#"><em>#<span>{{ box.id }}</span></em>{{ box.boxOrders|count }}件</a></li>
            {% endfor %}
          <li id="addBox" class="add" data-toggle="modal" data-target="#creatBoxModal"><em>+</em>创建空箱子</li>
        </ul>
      </div>
    </div>
  </div>
</div>
<!-- 创建箱子 -->
<div class="modal fade" id="creatBoxModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">创建物流箱</h4>
      </div>
      <div class="modal-body">
        <p>确认要创建物流箱并打印条码吗？</p>
        <p>注意：请及时将条码贴在物流箱上，以免丢失</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <form id="creatBoxForm">
          <button id="confirmCreatBox" type="submit" class="btn btn-primary">确定</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="/js/check-index.js"></script>
{% endblock %}