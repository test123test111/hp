{% set menu_name = "uservip" %}
{% set sidebar_name = "VIP用户购物车" %}
{% extends '@view/layouts/main.twig' %}
{% block content %}
    <div class="breadcrumbs breadcrumbs-fixed" id="breadcrumbs">
        <script type="text/javascript">
            try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
        </script>
        <!-- 面包屑 开始 -->
        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/uservip/list">VIP用户管理</a>
            </li>
            <li class="active">VIP用户购物车</li>
        </ul><!-- 面包屑 结束 -->
    </div><!-- 主体topbar 开始 -->
    <div class="page-content">
        <div class="page-header">
            <h1>
                VIP用户购物车
                <small>
                </small>
                <button style="float: right"><a href="javascript:history.go(-1)">返回</a></button>
            </h1>
        </div><!-- /.page-header -->
        {{ widget('\\kartik\\grid\\GridView',
        {
            'layout':'\n{items}\n{pager}',
            'id':'app-grid',
            'tableOptions':{'class':'table table-striped table-bordered table-hover'},
            'dataProvider':dataProvider,
            'filterModel':model,
            'pager':{
            'class':'\\common\\extensions\\Page\\CPageLink',
        },
            'columns':{
            0:{
                'attribute':'stock_id',
            },
            1:{
                'attribute':'name',
                'value':'return $model->stockInfo->name;'|value_callback,
            },
            2:{
                'attribute':'priceout',
                'value':'return $model->stockInfo->priceout;'|value_callback,
            },

            8:{
                'attribute':'vipusernum',
                'format':'raw',
                'value':model.getCartLink()|value_callback,
            },
            3:{
                'attribute':'stock_amount',
                'value':'if(!$model->stockInfo->onshelf){return $model->stockOnshelf[0];}else{return $model->stockAmount;}'|value_callback,
            },
            4:{
                'attribute':'buyer',
                'value':'return $model->buyerInfo->name;'|value_callback,
            },
            6:{
                'attribute':'create_time',
                'format':['date', 'php:Y-m-d H:i'],
            },



        }
        })
        }}
    </div>
{% endblock %}
