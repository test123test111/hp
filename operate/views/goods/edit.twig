{% set menu_name = "goods" %}
{% set sidebar_name = "商品编辑" %}
{% extends '@view/layouts/main.twig' %}
{% block content %}
<link rel="stylesheet" href="/ace/css/slider.css">
<div class="breadcrumbs breadcrumbs-fixed" id="breadcrumbs">
	<script type="text/javascript">
		try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
	</script>
	<!-- 面包屑 开始 -->
	<ul class="breadcrumb">
		<li>
			<i class="icon-home home-icon"></i>
			<a href="#">主页</a>
		</li>

		<li>
			<a href="#">全部商品</a>
		</li>
		<li class="active">商品编辑</li>
	</ul><!-- 面包屑 结束 -->
</div><!-- 主体topbar 开始 -->
<!-- page-content 开始 -->
<div class="page-content">
	<!-- row 开始 -->
	<div class="row">
		<!-- col 开始 -->
		<div class="col-xs-12">
			<!-- page主要content 开始 -->			
			<div class="space-10"></div>
			<div class="goods-basic-info">
				<h4>基本信息</h4>
				<ul>
					<li class="clear">
						<strong class="col-xs-1">商品状态</strong>
						<span class="col-xs-5 onoff" id="btnOnoff">
							<label  class="inline">
								<input id="gritter-light" type="checkbox" class="ace ace-switch ace-switch-4" checked="" />
								<span id="lbl" class="lbl"></span>
							</label>
						</span>
					</li>
					<li class="clear">
						<strong class="col-xs-1">商品图片</strong>
						<div class="col-xs-5">
							<div class="device">
								<div class="swiper-container">
									<ul id="stockImgs" class="swiper-wrapper">
										<li class="swiper-slide"><img src="/ace/images/goods.jpg"></li>
										<li class="swiper-slide"><img src="/ace/images/goods-img.png"></li>
									</ul>
								</div>
								<div class="paginationWrap"><div class="pagination"></div></div>
							</div>
						</div>
					</li>
				</ul>
			</div>
			<div class="space-10"></div>
			<!-- page主要content 结束 -->
		</div><!-- col 结束 -->
	</div><!-- row 结束 -->
</div><!-- page-content 结束 -->
{% block page_scripts %}
<script type="text/javascript" src="/ace/js/swiper.js"></script>
<script type="text/javascript">
	$(function(){
		$("#gritter-light").attr("data-type",0);
		$("#gritter-light").off("click").on("click",function(){
			
			if($(this).attr("data-type") == 0){
				$(this).attr("data-type",1);
				
			}else{
				$(this).attr("data-type",0);
				
			}
		});

		var mySwiper = new Swiper('.swiper-container', {
			pagination: '.pagination',
			paginationClickable: true
		});
})
</script>
{% endblock %}
{% endblock %}