{% set menu_name = "position" %}
{% set sidebar_name = "运营位列表" %}
{% extends '@view/layouts/main.twig' %}
{% block content %}
<link rel="stylesheet" href="/ace/css/bootstrap-datetimepicker.min.css">
<div class="breadcrumbs breadcrumbs-fixed" id="breadcrumbs">
            <script type="text/javascript">
              try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
            </script>
            <!-- 面包屑 开始 -->
            <ul class="breadcrumb">
              <li>
                <i class="icon-home home-icon"></i>
                <a href="/">主页</a>
              </li>
              <li class="active">运营位</li>
            </ul><!-- 面包屑 结束 -->
          </div><!-- 主体topbar 开始 -->
          <!-- page-content 开始 -->
<div class="page-content position-list">
  <!-- row 开始 -->
  <div class="row">
    <!-- col 开始 -->
    <div class="col-xs-12">
      <!-- page主要content 开始 -->
      <div class="search-area col-sm-12">
        <!-- 搜索条件 开始 -->
        <div class="search-box">
          <div class="space-10"></div>
          <form id="searchBarForm" action="" method="get">
            <!-- 分类搜索 开始 -->
            <div class="classified-search">
              <div class="input-group">
                  <input id="searchContent" type="text" class="search-bar form-control search-query input-sm" name="name" value="{% if params.name is defined %}{{ params.name }}{% endif %}" placeholder="请输入想要搜索的运营位" />
                  
                  <div class="classify-info btn-group">
                    
                    <button type="button" id="classifiedBtn" data-toggle="dropdown" class="classified-btn btn btn-xs btn-primary dropdown-toggle">
                      <em>运营位</em>
                      <span class="icon-caret-down icon-on-right"></span>
                    </button>
                  </div>
                  <span class="search-btn input-group-btn">
                    <button id="searchBtn" type="submit" class="btn btn-primary btn-xs">
                      搜索
                      <i class="icon-search icon-on-right bigger-110"></i>
                    </button>
                  </span>
              </div>
            </div>
            <!-- 分类搜索 结束 -->
            <!-- 搜索结果 开始 -->
            <div class="search-results">
              <div class="space-10"></div>
              <div class="results-tab tabbable">
                <ul class="nav nav-tabs" id="tabLevelOne">
                  <li {% if params.status is not defined or (params.status is defined and params.status !=0)%} class="active" {% endif %}data-status="1">
                    <a data-toggle="tab">线上</a>
                  </li>
                  <li {% if params.status is defined and params.status == 0 %}class="active" {% endif %} data-status="0">
                    <a data-toggle="tab">已下线</a>
                  </li>
                </ul>
                <input type="hidden" name="status" value="" id="status">
                <input type="hidden" name="type" value="" id="type">
                <ul class="second-level-tabs nav nav-tabs" id="tabLevelTwo">
                  <li {% if params.type is not defined or (params.type is defined and params.type =="")%}class="active"{% endif %}>
                    <a href="#" data-toggle="tab">全部</a>
                  </li>
                  <li data-type="2" {% if params.type is defined and params.type == 2 %}class="active"{% endif %}>
                    <a href="#" data-toggle="tab">APP买家版</a>
                  </li>
                  <li data-type="1" {% if params.type is defined and params.type == 1 %}class="active"{% endif %}>
                    <a href="#" data-toggle="tab">APP买手版</a>
                  </li>
                  <li data-type="0" {% if params.type is defined and params.type == 0 and params.type !="" %}class="active"{% endif %}>
                    <a href="#" data-toggle="tab">H5活动</a>
                  </li>
                  <li data-type="3" {% if params.type is defined and params.type == 3 and params.type !="" %}class="active"{% endif %}>
                    <a href="#" data-toggle="tab">商品类目</a>
                  </li>
                </ul>

                <div class="tab-content">
                <div id="home" class="tab-pane in active">
                  <!-- table responsive -->
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th class="center">推荐位信息</th>
                          <th class="center">Id</th>
                          <th class="center">内容数量</th>
                          <th class="center">创建人</th>
                          <th class="center">创建时间</th>
                          <th class="center">更新时间</th>
                          <th class="center">操作</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for result in results %}
                        <tr class="placeholder">
                            <td colspan="6"></td>
                        </tr>
                        <tr class="info-detail">
                          <td class="order-info">
                            
                            <img src="{{ staticDomain }}{{ result.image }}" alt="goods">
                            <div class="info">
                              <h6>{{ result.name }}</h6>
                              <p class="type">{{ result.getPositionType() }}</p>
                              <p>{{ result.desc }}</p>
                            <div>
                            
                          </td>
                          <td class="position-id">
                            <div class="space-10"></div>
                            <span class="center">{{ result.id }}</span>
                          </td>
                          <td>
                              <div class="space-10"></div>
                              <span class="center">{{ result.details|count }}</span>
                          </td>
                          <td>
                              <div class="space-10"></div>
                              <span class="center">{{ result.manager.username }}</span>
                          </td>
                          <td>
                              <div class="space-6"></div>
                              <span class="center">{{ result.created_time|date('Y-m-d') }}<span>
                              <span class="center">{{ result.created_time|date('H:i:s') }}</span>
                          </td>
                          <td>
                              <div class="space-6"></div>
                              <span class="center">{{ result.updated_time|date('Y-m-d') }}<span>
                              <span class="center">{{ result.updated_time|date('H:i:s') }}</span>
                          </td>
                          <td class="operate">
                            <div class="space-10"></div>
                            <div class="center">
                              <div class="edit center">
                                          <div class="center"><i class="icon-edit bigger-160"></i></div>
                                          <p class="center"><a href="/position/update/{{ result.id }}">管理</a></p>
                                      </div>
                                      <div class="note center">
                                          <div class="center"><i class="icon-trash bigger-160"></i></div>
                                          <p class="center"><a href="/position/delete/{{ result.id }}">下线</a></p>
                                      </div>
                                    </div>
                          </td>
                        </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                    
                  </div>
                  <!-- table responsive -->
                  <!-- Pagination 开始 -->
                  <div class="pages">
                    {{ widget('\\yii\\widgets\\LinkPager',{'pagination':pages}) }}
                  </div>
                  <!-- pagination 结束 -->
                </div>
              </div>
              </div>
            
            </div>
            
          </form>
          <button id="create_position" class="btn btn-primary btn-sm">创建运营位</button>
        </div>
      <!-- page主要content 结束 -->
    </div><!-- col 结束 -->
  </div><!-- row 结束 -->
</div><!-- page-content 结束 -->
<script type="text/javascript" src="/ace/js/position-list.js"></script>

{% endblock %}
