{% set menu_name = "boardroom" %}
{% set sidebar_name = "会议室列表" %}
{% extends '@view/layouts/main.twig' %}
{% block content %}
<link rel="stylesheet" href="/ace/css/bootstrap-datetimepicker.min.css">
<div class="breadcrumbs breadcrumbs-fixed" id="breadcrumbs">
            <script type="text/javascript">
              try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
            </script>
            <!-- 面包屑 开始 -->
            <ul class="breadcrumb">
              <li>
                <i class="icon-home home-icon"></i>
                <a href="/">主页</a>
              </li>
              <li class="active">会议室</li>
            </ul><!-- 面包屑 结束 -->
          </div><!-- 主体topbar 开始 -->
          <!-- page-content 开始 -->
<div class="page-content boardroom-list">
  <!-- row 开始 -->
  <div class="row">
    <!-- col 开始 -->
    <div class="col-xs-12">
      <!-- page主要content 开始 -->
      <div class="search-area col-sm-12">
        <!-- 搜索条件 开始 -->
        <div class="search-box">
          <div class="space-10"></div>
          <form id="searchBarForm" action="" method="get">

            <!-- 分类搜索 结束 -->
            <!-- 搜索结果 开始 -->
            <div class="search-results">
              <div class="space-10"></div>
              <div class="results-tab tabbable">
               
                <div class="tab-content">
                <div id="home" class="tab-pane in active">
                  <!-- table responsive -->
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th class="center">Id</th>                           
                          <th class="center">楼层</th>
                          <th class="center">会议室名称</th>
                          <th class="center">人数</th>
                          <th class="center">创建时间</th>
                          <th class="center">更新时间</th>
                          <th class="center">操作</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for result in results %}
                        <tr class="placeholder">
                            <td colspan="6"></td>
                        </tr>
                        <tr class="info-detail">

                            
                           <td>
                            <div class="space-10"></div>
                            <span class="center">{{ result.id }}</span>
                          </td>      
                                <td><h6>{{ result.floor }}</h6></td>
                          <td><h6>{{ result.name }}</h6></td>
                          <td><h6>{{ result.people_num }}</h6></td>
                          <td>
                              <div class="space-6"></div>
                              <span class="center">{{ result.created_time|date('Y-m-d') }}<span>
                              <span class="center">{{ result.created_time|date('H:i:s') }}</span>
                          </td>
                          <td>
                              <div class="space-6"></div>
                              <span class="center">{{ result.updated_time|date('Y-m-d') }}<span>
                              <span class="center">{{ result.updated_time|date('H:i:s') }}</span>
                          </td>
                          <td class="operate">
                            <div class="space-10"></div>
                            <div class="center">
                              <div class="edit center">
                                          <div class="center"><i class="icon-edit bigger-160"></i></div>
                                          <p class="center"><a href="/boardroom/update/{{ result.id }}">管理</a></p>
                                      </div>
                                      <div class="note center">
                                          <div class="center"><i class="icon-trash bigger-160"></i></div>
                                          <p class="center"><a href="/boardroom/delete/{{ result.id }}">下线</a></p>
                                      </div>
                                    </div>
                          </td>
                        </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>
                  <!-- table responsive -->
                  <!-- Pagination 开始 -->
                  <div class="pages">
                    {{ widget('\\yii\\widgets\\LinkPager',{'pagination':pages}) }}
                  </div>
                  <!-- pagination 结束 -->
                </div>
              </div>
              </div>
            
            </div>
            
          </form>
        </div>
      <!-- page主要content 结束 -->
    </div><!-- col 结束 -->
  </div><!-- row 结束 -->
</div><!-- page-content 结束 -->
<script type="text/javascript" src="/ace/js/boardroom-list.js"></script>

{% endblock %}
