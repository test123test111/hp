{% extends '@view/layouts/base.twig' %}
{% set title = title is defined ? title : '淘世界OA-登录' %}
{% block body_class %}
  login-layout
{% endblock %}
{% block body %}
    <div class="main-container">
      <div class="main-content">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1">
            <div class="login-container">
              <div class="center">
                <h1>
                  <i class="icon-leaf green"></i>
                  <span class="red">Aimei</span>
                  <span class="white">OA</span>
                </h1>
                <h4 class="blue">&copy; aimeizhyi.com</h4>
              </div>

              <div class="space-6"></div>

              <div class="position-relative">
                <div id="login-box" class="login-box visible widget-box no-border">
                  <div class="widget-body">
                    <div class="widget-main">
                      <div class="space-6"></div>

                      {% set form = activeform.begin({'id':'login-form', 'options' : {'class' : 'form-signin'}}) %}
                      <fieldset>
                          {{ form.field(model,'username',{inputOptions:{'class':'form-control'}}).label(false).input('text',{'placeholder':'Username'})|raw}}
                          <!-- Password -->
                          {{ form.field(model,'password',{inputOptions:{'class':'form-control'}}).passwordInput().label(false).input('password',{'placeholder':'Password'})|raw}}
                          <div class="space"></div>

                          <div class="clearfix">
                            <label class="inline">
                              <input type="checkbox" class="ace" />
                              <span class="lbl"> Remember Me</span>
                            </label>

                            <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                              <i class="icon-key"></i>
                              Login
                            </button>
                          </div>

                          <div class="space-4"></div>
                        </fieldset>
                        {{ void(form.end()) }}
                    </div><!-- /widget-main -->
                    
                  </div><!-- /widget-body -->
                </div><!-- /login-box -->
              </div><!-- /position-relative -->
            </div>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div>
    </div><!-- /.main-container -->
{% endblock %}
