{% extends '@app/views/layouts/base.twig' %}
{% block body %}
<script type='text/javascript' src='/js/layer.min.js'></script>
    <div class="header">
        <!-- top -->
        <div class="mtop clearfix">
            <h1 class="logo"><a href="/"></a></h1>
            <div class="info">
                {# <div class="search">
                    <form action="/material/list" method="get">
                         <input type="text" class="search_input" value="" placeholder="输入物料号搜索" name="material_id" />
                         <input type="submit" class="search_btn" value="&nbsp;" />
                    </form>
                </div> #}
                <a class="feedback">欢迎您:</a>
                <div class="avatar"><img src="/images/avatar.png"></div>
                <div class="user">
                    <span>{{ App.user.identity.name }}</span>
                    <div class="sub">
                        <a href="javascript:;" class="updatePw">修改密码</a>
                        <a href="/site/logout">退出登录</a>
                    </div>
                </div>
                <a href="/cart" class="cart">购物车</a>
                <a class="notice" id="noticeCenter" href="/order/approval">审批</a>
            </div>
        </div>
        <!-- top end -->

        <!-- banner -->
        <div class="mban">
            {% if App.user.identity.is_reset_password == 0 %}
            <div class="tip-top">
                为了您的账号安全请点击<a href="javascript:;" class="updatePw">重置您的密码</a>
                <span>
                    <a href="javascript:;">关闭</a>
                </span>
            </div>
            {% endif %}
            <h2 class="title"><img src="/images/title.png"></h2>
        </div>
        <!-- banner end -->
    </div>
    <script type="text/javascript">
        $('.tip-top span a').click(function(){
            $(this).parent().parent().remove();
        })
    </script>
    {% block content %}
    
    {% endblock %}
{% endblock %}